---
import Header from '../components/Header.astro';
import '@fontsource-variable/onest'
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro'

interface Props {
	title: string,
	description : string,
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content={description} />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<link rel="shortcut icon" href="/IMG/25185.png" />
</head>
<body class="z-111">
<!-- Fondo con opacidad y efecto de zoom -->
<div class="background-overlay"></div>
<div class="background-dark-overlay"></div>

<Header />
<slot />
<Experience />
<Footer />
</body>
<script src="../index.js"></script>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html, body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Onest Variable";
		overflow-x: hidden;
	}

	body {
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
		position: relative;
	}

	/* Contenedor para la imagen de fondo con efecto de zoom */
	.background-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/backgrounds/b.png');
		background-size: cover;
		background-position: center;
		z-index: -2; /* Asegura que esté detrás del contenido */
		animation: zoomInOut 10s infinite alternate; /* Efecto de movimiento más rápido */
	}

	/* Superposición oscura para mayor opacidad */
	.background-dark-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.8); /* Aumenta la opacidad a 0.8 */
		z-index: -1; /* Capa encima de la imagen de fondo */
	}

	/* Animación para efecto de zoom con más movimiento */
	@keyframes zoomInOut {
		0% {
			transform: scale(1.5);
		}
		100% {
			transform: scale(1.15); /* Ajuste zoom */
		}
	}
</style>
